	<script>
		
		function onSubmit()
		{
			if( $("#email").val().trim() == "")
			{
				var message = "이메일을 입력해 주세요";
				$("#email").val("");
				$("#email").focus();
				alert(message);
				return false;
			}
			
			if( $("#passwd").val().trim() == "")
			{
				var message = "비밀번호를 입력해 주세요";
				$("#passwd").val("");
				$("#passwd").focus();
				alert(message);
				return false;
			}
			
			if( $("#check_passwd").val().trim() == "")
			{
				var message = "비밀번호 확인을 입력해 주세요";
				$("#check_passwd").val("");
				$("#check_passwd").focus();
				alert(message);
				return false;
			}
			
			if( $("#username").val().trim() == "")
			{
				var message = "이름을 입력해 주세요";
				$("#username").val("");
				$("#username").focus();
				alert(message);
				return false;
			}
			
			if( $("#address").val().trim() == "")
			{
				var message = "주소를 입력해 주세요";
				$("#address").val("");
				$("#address").focus();
				alert(message);
				return false;
			}
			
			if( $("#phone").val().trim() == "")
			{
				var message = "번호를 입력해 주세요";
				$("#phone").val("");
				$("#phone").focus();
				alert(message);
				return false;
			}
			
			if( $("#passwd").val().trim() != $("#check_passwd").val().trim())
			{
				var message = "비밀번호를 다시 확인해 주세요";
				$("#passwd").val("");
				$("#check_passwd").val("");
				$("#passwd").focus();
				alert(message);
				return false;
			}
		}
		
		/* 숫자만 입력받기 */
		function fn_press(event, type) {
			if(type == "numbers") {
				if(event.keyCode < 48 || event.keyCode > 57) return false;
				//onKeyDown일 경우 좌, 우, tab, backspace, delete키 허용 정의 필요
			}
		}
		/* 한글입력 방지 */
		function fn_press_han(obj)
		{
			//좌우 방향키, 백스페이스, 딜리트, 탭키에 대한 예외
			if(event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 37 || event.keyCode == 39
			|| event.keyCode == 46 ) return;
			//obj.value = obj.value.replace(/[\a-zㄱ-ㅎㅏ-ㅣ가-힣]/g, '');
			obj.value = obj.value.replace(/[\ㄱ-ㅎㅏ-ㅣ가-힣]/g, '');
		}

	</script>
