  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body class="Head_nav">
  <td><!--상단 메뉴 인클루드--><% include ./top.ejs %></td>
  <div class="row">
    <div class="col-2">
      <div class="list-group">
        <li class="list-group-item font-weight-bold" style="background-color: rgb(240, 240, 240)"> MyPage</li>
        <a class="list-group-item" href="/user" style="background-color: rgb(240, 240, 240)">나의정보</a>
        <a class="list-group-item" href="/user/order" style="background-color: rgb(240, 240, 240)">주문정보</a>
        <a class="list-group-item" href="/user/modify"  style="background-color: rgb(240, 240, 240)">회원정보수정</a>
        <% if(rows[0].permitted!=1){%>
        <a class="list-group-item" href="/user/saleauthreq" style="background-color: rgb(240, 240, 240)">판매자권한요청</a>
        <% } else{%>
        <a class="list-group-item" href="/user/saleauthdel" style="background-color: rgb(240, 240, 240)">판매자권한삭제</a>
        <%}%>
      </div>
    </div>
    <div class="col-9">
      <div class="jumbotron">
        <h1>My Page</h1>
        <p>판매자 권한삭제</p>      
      </div>
      <div class="well"><h2>판매자권한삭제</h2></div>
      <div class="container">
        <form method="post" action="/user/saleauthdel">
          <div class="form-group row">
            <label for="staticEmail" class="col-md-1 col-form-label">Email</label>
            <div class="col-md-11">
              <input type="text" readonly class="form-control-plaintext" id="staticEmail" value=<%=rows[0].email%>>
            </div>
            <label for="company" class="col-md-1 col-form-label">회사명</label>
            <div class="col-md-11">
              <input type="text" readonly class="form-control-plaintext" id="staticName" value=<%=rows[0].company%>>
            </div>
            <label for="company" class="col-md-1 col-form-label">회사주소</label>
            <div class="col-md-11">
              <input type="text" readonly class="form-control-plaintext" id="staticName" value=<%=rows[0].address%>>
            </div>
            <label for="company" class="col-md-1 col-form-label">담당자명</label>
            <div class="col-md-11">
              <input type="text" readonly class="form-control-plaintext" id="staticName" value=<%=rows[0].manager%>>
            </div>
          </div>
          <button type="submit" class="btn btn-primary" style="background-color: lightgray">권한 삭제</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
